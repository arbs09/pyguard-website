server {
    listen 80;
    server_name pyguard.top *.pyguard.top;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name www.pyguard.top;
    return 301 $scheme://pyguard.top$request_uri;
    ssl_certificate /etc/letsencrypt/live/pyguard.top/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pyguard.top/privkey.pem;

}

server {
    listen 443 ssl;
    server_name pyguard.top;

    location / {
        proxy_pass https://arbs09.github.io/pyguard-website/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
	
	ssl_certificate /etc/letsencrypt/live/pyguard.top/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pyguard.top/privkey.pem;
}

server {
    listen 443 ssl;
    server_name *.pyguard.top;
        location / {
                add_header Content-Type text/plain;
        return 200 "This subdomain ($host) is currently not in use!";
    }
    
	ssl_certificate /etc/letsencrypt/live/pyguard.top/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pyguard.top/privkey.pem;
}
